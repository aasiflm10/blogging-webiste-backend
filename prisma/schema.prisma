generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog{
  id String @default(uuid()) @id
  title String
  description String
  author String
  createdAt DateTime @default(now())
  tags BlogProjectTag[]
}

model Tag{
  id String @default(uuid()) @unique
  tagName String @id @unique
  blogs BlogProjectTag[]
  // projectId String? //optional
  // project Project? @relation(fields: [projectId], references: [id])
  // blogId String? //optional
  // blog Blog? @relation(fields: [blogId], references: [id])
}

model BlogProjectTag {
  blogId String
  blog Blog @relation(fields: [blogId], references: [id])

  tagId String
  tag Tag @relation(fields: [tagId], references: [id])

  projectId String
  project Project @relation(fields: [projectId], references: [id])

  @@@id([blogId, tagId, projectId])
}
model Project{      
  id String @default(uuid()) @id
  name String @unique
  description String
  liveLink String
  githubLink String
  tags BlogProjectTag[]
}